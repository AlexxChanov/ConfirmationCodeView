<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent">

  <com.chanov.mylibrary.ConfirmationCodeView
      android:layout_width="wrap_content"
      android:layout_height="58dp"
      android:digits="0123456789"
      android:gravity="center"
      android:inputType="number"
      android:textAppearance="?textAppearanceHeadline5"
      android:layout_marginBottom="32dp"
      android:textColor="@color/black"
      custom:landingAlertColor="@color/design_default_color_secondary"
      custom:landingDigitExtraSpace="5dp"
      custom:landingDigitHeight="36dp"
      custom:landingDigitNumber="4"
      custom:landingDigitWidth="14dp"
      custom:rectRadius="4dp"
      custom:boxStrokeWidth="2dp"
      custom:rectWidth="40dp"
      custom:landingStrokeColor="@color/design_default_color_primary_dark"/>
  </RelativeLayout>